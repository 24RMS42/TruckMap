<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/color_box_pop"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/color_pop_cancel_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/cross_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_pop_cancel_imgview"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/code_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/code_one" />

                <TextView
                    android:id="@+id/code_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_xhdpi_5"
                    android:background="@drawable/code_two" />

                <TextView
                    android:id="@+id/code_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/code_three" />

                <TextView
                    android:id="@+id/code_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_xhdpi_5"
                    android:background="@drawable/code_four" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/code_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/code_five" />

                <TextView
                    android:id="@+id/code_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_xhdpi_5"
                    android:background="@drawable/code_six" />

                <TextView
                    android:id="@+id/code_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/code_seven" />

                <TextView
                    android:id="@+id/code_eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_xhdpi_5"
                    android:background="@drawable/code_eight" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/category_dropdown_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dropdown"
        android:gravity="center|left"
        android:hint="@string/lbl_categories"
        android:paddingLeft="@dimen/text_xhdpi_9"
        android:textColor="@color/color_656565" />

    <TextView
        android:id="@+id/color_dialogTextViewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_xhdpi_9"
        android:layout_marginTop="@dimen/text_xhdpi_7"
        android:paddingLeft="@dimen/margin_xhdpi_18"
        android:text="@string/lbl_comment"
        android:textColor="@color/color_656565" />

    <EditText
        android:id="@+id/color_dialog_comment_edittext"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pop_comment_box"
        android:gravity="left"
        android:hint="@string/color_dialog_edittext"
        android:inputType="textCapSentences|textMultiLine"
		android:lines="4"
        android:maxLength="60"
        android:padding="@dimen/text_xhdpi_9"
        android:textSize="@dimen/text_xhdpi_14" />

    <TextView
        android:id="@+id/color_dialog_share_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_xhdpi_9"
        android:background="@drawable/pop_btn"
        android:gravity="center"
        android:text="@string/share_heading"
        android:textColor="@color/color_656565" />

</LinearLayout>