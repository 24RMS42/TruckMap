<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header_homescreen_relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#009ff6" >

        <TextView
            android:id="@+id/home_ui_tv_logo"
            style="@style/event_text_value"
            android:layout_centerInParent="true"
            android:text="@string/event_name" />

        <ImageView
            android:id="@+id/event_btn_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:paddingLeft="@dimen/margin_10"
            android:src="@drawable/event_btn" />

        <ImageView
            android:id="@+id/setting_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:paddingRight="@dimen/margin_10"
            android:src="@drawable/setting" />
    </RelativeLayout>

</LinearLayout>